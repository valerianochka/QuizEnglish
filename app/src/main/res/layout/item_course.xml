<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_276sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="@color/btn_purple">
            <TextView
                android:id="@+id/v_course_index"
                style="@style/TextAccentDark"
                android:layout_gravity="center"
                android:text="@string/course_card_index"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/v_course_title"
            style="@style/TextAccentDark"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/course_card_title"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/v_course_start"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="end"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="@color/btn_blue">
            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_gravity="center"
                android:src="@drawable/icon_next"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/v_course_description"
            style="@style/TextMainDark"
            android:textColor="@color/text_hint"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="@string/course_card_description"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>