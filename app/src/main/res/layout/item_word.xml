<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_256sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/v_word_sound"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:backgroundTint="@color/btn_blue">
            <ImageView
                android:src="@drawable/icon_sound"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/v_word_en"
                style="@style/TextAccentDark"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/word_card_en"/>
            <TextView
                android:id="@+id/v_word_ru"
                style="@style/TextMainDark"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/word_card_ru"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>