<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_276sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp">
        <TextView
            android:id="@+id/v_vocabulary_title"
            style="@style/TextAccentDark"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/vocabulary_card_title"/>
        <ImageView
            android:id="@+id/v_vocabulary_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="@dimen/_206sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_44sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:backgroundTint="@color/vocabulary_purple">
                <TextView
                    android:id="@+id/v_vocabulary_words"
                    style="@style/TextAccentLight"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/vocabulary_card_word"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/v_vocabulary_level"
                style="@style/TextMainDark"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/vocabulary_card_level"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>