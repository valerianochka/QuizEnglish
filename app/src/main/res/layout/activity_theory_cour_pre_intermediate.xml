<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TheoryCourPreIntermediateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="@dimen/_276sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_30sdp">
                <ImageView
                    android:onClick="startCourse"
                    android:id="@+id/startSetting"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/icon_back"/>
                <TextView
                    android:id="@+id/v_theory_title"
                    style="@style/TextTitlePage"
                    android:layout_marginStart="0dp"
                    android:text="Название"/>
            </LinearLayout>
            <TextView
                style="@style/TextTitle"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/vocabulary_theory"/>
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_276sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/white">
                <ImageView
                    android:id="@+id/v_cour_list"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/_256sdp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:onClick="startQuiz"
                style="@style/Btn"
                android:backgroundTint="@color/btn_blue"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/accent_blue"
                android:text="@string/vocabulary_btn"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>