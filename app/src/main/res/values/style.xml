<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitlePage">
        <item name="android:layout_width">@dimen/_228sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="TextTitle">
        <item name="android:layout_width">@dimen/_276sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="TextSubtitle">
        <item name="android:layout_width">@dimen/_276sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="TextMainDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="TextAccentDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <style name="TextAccentLight" parent="TextAccentDark">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="Btn">
        <item name="android:layout_width">@dimen/_276sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:background">@drawable/rectangle_10r</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:translationZ">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/text_yellow</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="QuizAnswer">
        <item name="android:layout_width">@dimen/_123sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">@dimen/_276sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/rectangle_10r</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:translationZ">@dimen/_2sdp</item>

        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Card5">
        <item name="android:layout_width">@dimen/_276sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
    </style>
    <style name="Card10" parent="Card5">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
    </style>

</resources>